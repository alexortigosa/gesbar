{% extends 'base.html.twig' %}

{% block contenido %}
<div class="col-xs-4 col-sm-2 col-md-2 ">
	<ul class="nav nav-stacked">
	  <li role="presentation" class="active"><a href="javascript:showHome();">Ense√±ar</a></li>
	  <li role="presentation"><a href="javascript:showCreate();">Crear</a></li>
	</ul>
</div>
<div class="col-xs-8 col-sm-10 col-md-10 ">
	<div id="showmesas" class="secciones col-xs-8 col-sm-10 col-md-10">
		{% for mesa in mesas %}
		<div class="col-xs-6 col-sm-6 col-md-6 ">
			<a href="/mesa/{{ mesa.id }}">
			{{ mesa.name }}
			</a>
		</div>
		{% endfor %}
	</div>
	<div id="createMesa" class="secciones col-xs-8 col-sm-10 col-md-10" style="display:none;">
		<h1>crear</h1>
		{{ form_start(form) }}
		{{ form_widget(form) }}
		{{ form_end(form) }}
		<p>{{ formmessage }}</p>
	</div>
</div>
{% endblock %}


{% block javascripts %}
	<script>
	$(document).ready(function (){

	});

	function showCreate(){
		$(".secciones").hide();
		$("#createMesa").show();
	}
	function showHome(){
		$(".secciones").hide();
		$("#showmesas").show();
	}
	</script>
{% endblock %}